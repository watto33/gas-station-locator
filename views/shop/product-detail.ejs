<body>
  <%- include('../includes/navigation.ejs') %>
  <main class="centered">
    <h1><%= product.name %></h1>
    <hr>
    <div class="image">
      <img src="<%= product.imageUrl %>" alt="<%= product.name %>">
    </div>
    <h3>Available Petrol: <%= product.petrol %>L | Price: <%= product.petrolAmount %>/L </h3>
