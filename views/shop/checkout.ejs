<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/cart.css">
<style>
  body{
    background: #2980b9;  
background: -webkit-linear-gradient(to right, #2c3e50, #2980b9);  
background: linear-gradient(to right, #2c3e50, #2980b9); 


  }
  .cart__item-list{
  background-color: #fff;
}
</style>
</head>

<body>
  <%- include('../includes/navigation.ejs') %>
  <main>
    <ul class="cart__item-list">
      <% products.forEach(p=>{ %>
        <li class="cart__item">
          <h1>Petrol : <%= p.product.petrol %></h1>
          <h1>Diesel : <%= p.product.diesel %></h1>
        </li>
        <%})%>
    </ul>
    <div class="centered">
      <h2 style="color: #fff;">Total: <%= totalPrice %></h2>
    </div>
    <div class="centered">
      <button id="order-btn" class="btn">ORDER</button>
      <script src="https://js.stripe.com/v3/"></script>
      <script>
          var stripe = Stripe('pk_test_51H4kbbCG8zCedipoUtEYGS7wwn4AqxTGEowcVHDnKH601BhAjwEFmE0aif0fWvWLEYWTu4ygqHkWbs1q8IVZ7vNm005AaMDCQ1');
          var orderBtn = document.getElementById('order-btn');
          orderBtn.addEventListener('click', function() {
              stripe.redirectToCheckout({
                  sessionId: '<%= sessionId %>'
              });
          });
      </script>
    </div>
  </main>
  <%- include('../includes/end.ejs') %>